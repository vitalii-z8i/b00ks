%tr
  %td
    = link_to book_path(book) do
      = book.name if hit.highlights(:name).empty?
      - hit.highlights(:name).each do |text|
        = text.format {|word| "<span class='match'>#{word}</span>"}.html_safe
  %td
    = book.author if hit.highlights(:author).empty?
    - hit.highlights(:author).each do |text|
      = text.format {|word| "<span class='match'>#{word}</span>"}.html_safe
  %td
    = truncate(book.description, length: 150, separator: ' ') if hit.highlights(:description).empty?
    - hit.highlights(:description).each do |text|
      = "...#{text.format {|word| "<span class='match'>#{word}</span>"}}...".html_safe
  %td= book.country
  %td
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_book_path(book), :class => 'btn btn-mini'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), book_path(book), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
