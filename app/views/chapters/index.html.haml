- model_class = Chapter
%h3 Chapters
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:'#')
      %th= model_class.human_attribute_name(:text)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @chapters.each do |chapter|
      %tr
        %td= chapter.number
        %td= link_to truncate(chapter.inner_text, length: 200, separator: ' '), book_chapter_path(@book, chapter)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_book_chapter_path(@book, chapter), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), book_chapter_path(@book, chapter), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_book_chapter_path(@book), :class => 'btn btn-primary'
