- model_class = Chapter
.page-header
  %h1= @chapter.book.name
  %h2= "Chapter #{@chapter.number}"

%p
  = @chapter.inner_text

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), book_path(@book), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_book_chapter_path(@book, @chapter), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), book_chapter_path(@book, @chapter), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'


  / = link_to "Next Chapter", book_chapter_path(@book, @chapter.number+1), :class => 'btn pull-right' unless Chapter.find_by(number: @chapter.number+1).nil?
  / = link_to "Prev Chapter", book_chapter_path(@book, @chapter.number-1), :class => 'btn pull-right' unless @chapter.number == 1
