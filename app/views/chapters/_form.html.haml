= form_for [@book, @chapter], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .control-group
    = f.label :book_id, :class => 'control-label'
    .controls
      = f.select :book_id, Book.all.map {|b| [b.name, b.id]}, selected: params[:book_id], :class => 'select'
  .control-group
    = f.label :inner_text, :class => 'control-label'
    .controls
      = f.text_area :inner_text, :class => 'text_area', style: "height: 1080px; width: 675px;"
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), book_chapters_path(@book), :class => 'btn'
